{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: cl.exe build all files",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${workspaceFolder}/code/main.exe",
                "${workspaceFolder}/code/*.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}/code"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by the user to build all C++ files."
        }
    ]
}